@model IEnumerable<bms.Models.Member>

@{
    ViewData["Title"] = "Member Share";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-light text-dark">Member Share</h2>
    </div>

    <div class="table-responsive">
        <table class="table table-borderless table-hover align-middle" style="table-layout: fixed;">
            <thead class="text-muted">
                <tr>
                    <th style="width: 15%;">Member ID</th>
                    <th style="width: 20%;">Name</th>
                    <th style="width: 15%;">Status</th>
                    <th style="width: 20%;">Email</th>
                    <th class="text-end" style="width: 30%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.MemberId</td>
                        <td>@member.FullName</td>
                        <td>
                            <span class="badge rounded-pill @(member.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @member.Status
                            </span>
                        </td>
                        <td>@member.Email</td>
                        <td class="text-end">
                            @if (member.Status == "Active")
                            {
                                <a asp-action="AddShare" asp-route-memberId="@member.MemberId" class="btn btn-sm btn-outline-primary me-1">
                                    Add Share
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary me-1" disabled>
                                    Add Share
                                </button>
                            }
                            <a asp-action="ViewMemberSharesDetails" asp-route-memberId="@member.MemberId" class="btn btn-sm btn-outline-secondary">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>