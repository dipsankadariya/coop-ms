@model IEnumerable<bms.Models.MemberShare>

@{
    ViewData["Title"] = "Member Share Details";
    var member = Model.FirstOrDefault()?.Member;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-light text-dark">Share Details for @(member?.FullName ?? "Member")</h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
    </div>
    
    @if (Model.Any())
    {
        <div class="mb-4">
            <span class="text-muted">Total Shares:</span> <strong class="fs-5">@Model.Sum(s => s.Amount).ToString("C")</strong>
        </div>

        <div class="table-responsive">
            <table class="table table-borderless table-hover align-middle">
                <thead class="text-muted">
                    <tr>
                        <th>Share ID</th>
                        <th>Amount</th>
                        <th>Share Type</th>
                        <th>Contribution Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var share in Model.OrderByDescending(s => s.ContributionDate))
                    {
                        <tr>
                            <td>@share.ShareId</td>
                            <td>@share.Amount.ToString("C")</td>
                            <td>
                                <span class="badge rounded-pill bg-primary">@share.ShareType</span>
                            </td>
                            <td>@share.ContributionDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No share contributions found for this member.
        </div>
    }
</div>
