@model bms.ViewModels.MemberShare.MemberShareVm

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 col-lg-5">
           
            <h2 class="fw-light mb-4">Buy Share</h2>

            <form asp-action="AddShare" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Member Selection -->
                <div class="mb-3">
                    <label asp-for="MemberId" class="form-label">Select Member</label>
                    <select asp-for="MemberId" class="form-control">
                        <option value="">-- Select Member --</option>
                        @foreach(var member in Model.MemberList)
                        {
                            <option value="@member.MemberId">@member.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="MemberId" class="text-danger small"></span>
                </div>

                <!-- Share Amount -->
                <div class="mb-3">
                    <label asp-for="Amount" class="form-label">Share Amount</label>
                    <input asp-for="Amount" type="number" class="form-control" placeholder="Enter share amount" />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>

                <!-- Share Type -->
                <div class="mb-3">
                    <label asp-for="ShareType" class="form-label">Share Type</label>
                    <input type="text" class="form-control" value="@Model.ShareType" disabled style="background-color: #282933; color: #ffffff;" />
                    <input asp-for="ShareType" type="hidden" />
                    <span asp-validation-for="ShareType" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-primary me-2">Buy Share</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>