@model bms.Data.DTOs.UserDto

@{
    ViewData["Title"] = "User Details";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white">User Details</h2>
        <a asp-action="Users" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>User ID:</strong>
                </div>
                <div class="col-md-9">
                    @Model.UserId
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Username:</strong>
                </div>
                <div class="col-md-9">
                    @Model.Username
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Email:</strong>
                </div>
                <div class="col-md-9">
                    @Model.Email
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Role:</strong>
                </div>
                <div class="col-md-9">
                    <span class="badge rounded-pill @(Model.Role == "Admin" ? "bg-danger" : "bg-primary")">
                        @Model.Role
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Status:</strong>
                </div>
                <div class="col-md-9">
                    <span class="badge rounded-pill @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Created Date:</strong>
                </div>
                <div class="col-md-9">
                    @Model.CreatedDate.ToString("MMMM dd, yyyy hh:mm tt")
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Users" class="btn btn-secondary">Back to List</a>
    </div>
</div>