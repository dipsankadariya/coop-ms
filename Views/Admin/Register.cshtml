@model bms.ViewModels.Auth.RegisterVm

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid min-vh-100 d-flex align-items-center">
    <div class="row w-100">
        <div class="col-12 col-md-6 col-lg-4 px-5">
            <div class="mb-4">
                <h1 class="text-white fw-bold mb-2" style="font-size: 2.5rem;">Add Staff</h1>
                <p class="text-white mb-0">Register a new staff member</p>
            </div>
            
            <form asp-action="Register" method="post">
                <div class="mb-2">
                    <label asp-for="Username" class="form-label text-white mb-1"></label>
                    <input asp-for="Username" class="form-control bg-dark text-white border-secondary" 
                           style="max-width: 400px;" placeholder="Choose a username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                
                <div class="mb-2">
                    <label asp-for="Email" class="form-label text-white mb-1"></label>
                    <input asp-for="Email" class="form-control bg-dark text-white border-secondary" 
                           style="max-width: 400px;" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                
                <div class="mb-2">
                    <label asp-for="Password" class="form-label text-white mb-1"></label>
                    <input asp-for="Password" class="form-control bg-dark text-white border-secondary" 
                           style="max-width: 400px;" placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                
                <div class="mb-2">
                    <label asp-for="ConfirmPassword" class="form-label text-white mb-1"></label>
                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-white border-secondary" 
                           style="max-width: 400px;" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small"></div>
                
                <div class="mb-3">
                    <button type="submit" class="btn px-5 py-2 text-white fw-semibold" 
                            style="max-width: 400px; background-color: #1e3a8a;">Register Staff</button>
                </div>
                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}