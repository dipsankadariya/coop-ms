@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-danger text-center" role="alert">
                <h2 class="alert-heading mb-3">Access Denied</h2>
                <p class="mb-4">You do not have permission to access this page.</p>
                <hr>
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Go to Home</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
